{
  "compilerOptions": {
    "module": "commonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@models/*": ["./src/infra/db/typeorm/models/*"], //adjest this according to the orm
      "@app/*": ["./src/app/*"],
      "@common/*": ["./src/common/*"],
      "@domain/*": ["./src/domain/*"],
      "@infra/*": ["./src/infra/*"],
      "@web/*": ["./src/web/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".husky",
    "docker",
    ".github",
    "tmp*.ts",
    "scripts"
  ]
}
